{{!
	雪碧图模板
	可以使用 spritesheet.escaped_image
}}
%block{
	display: block;
}

%backgroundImageUrl {
	background-image: url("{{options.backgroundImageUrl}}{{spritesheet.escaped_image}}");
}


{{#each sprites}}
{{../options.cssClass name}}
{
	@extend %backgroundImageUrl;
	background-position: {{px.offset_x}} {{px.offset_y}};
	width: {{px.width}};
	height: {{px.height}};
	@extend %block;
}
{{/each }}